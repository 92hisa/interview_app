<li class="list-group-item bg-light">
  <div class="row">
    <div class="col">
      <div class="d-flex">
        <%= link_to user_path(visitor) do %>
          <% if visitor.profile_image.present? %>
            <%=  image_tag visitor.profile_image.url, class:"avatar-md rounded-circle" %>
          <% else %>
            <%= image_tag 'profile_default_img_128', class:"avatar-md rounded-circle" %>
