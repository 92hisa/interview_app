<div class="py-3">
  <div class="container">
    <div class="row">
      <div class="col-xl-9 col-lg-9 col-md-12 col-12 mb-5 mt-4 ">
        <div class="border-bottom pb-4 mb-4 d-lg-flex justify-content-between align-items-center">
          <div>
            <h1 class="mb-0 h2">通知</h1>
            <p class="mb-0">Check your all notification and read it.</p>
          </div>
          <div>
            <%= link_to "通知を全て削除する", destroy_all_notifications_path, method: :delete, class: "btn btn-success" %>
          </div>
        </div>
        <div class="card rounded-lg">
          <!-- Card list -->
          <ul class="list-group list-group-flush">
            <% if @notifications.exists? %>
              <%= render partial: 'notification', collection: @notifications %>
            <% else %>
            <li class="list-group-item bg-transparent py-4">
              <div class="row align-items-center">
                <div class="col">
                  <div class="d-flex align-items-center">
                    <div class="ml-3">
                      <p class="mb-0">通知はありません</p>
                    </div>
                  </div>
                </div>
              </div>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
      <% if @user.id == current_user.id %>
        <%= render partial: 'mypage/account_menue' %>
      <% end %>
    </div>
  </div>
</div>
