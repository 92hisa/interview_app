<div class="container">
  <div class="row">
    <div class="col-md-3 col-sm-12">
      <div class="icon_image ">
        <% if @user.profile_image.url.nil? %>
          <div class="profile-default-img"></div>
          <%= image_tag 'profile_default_img_128.png' %>
        <% else %>
          <%= image_tag @user.profile_image.url, class: "profile-img" %>
        <% end %>
      </div>
    </div>
    <div class="col-md-9 col-sm-12">
      <table class="table table-striped text-center">
        <tbody>
          <tr>
            <th>user_ID</th>
            <th>ユーザー名</th>
            <th>メールアドレス</th>
            <th>プロフィールコメント</th>
            <th></th>
          </tr>
          <tr>
            <th><%= @user.id %></th>
            <th><%= @user.name %></th>
            <th><%= @user.email %></th>
            <th><%= @user.about_me %></th>
            <th>
              <% if @user == current_user %>
              <%= link_to "登録情報を変更", edit_user_registration_path, class: "btn btn-info" %>
              <% end %>
            </th>
          </tr>
        </tbody>
      </table>
      <div class="text-right">
          <%= link_to "戻る", :back %>
      </div>
    </div>
  </div>
</div>
