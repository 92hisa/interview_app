<!-- Bg -->
<div class="py-20" style="background-color: #d1eaf1; no-repeat;background-position: center;"></div>
<!-- User info -->
<div class="card p-lg-2 pt-2 pt-lg-0 rounded-0 border-0">
  <div class="container">
    <div class="row align-items-center">
      <div class="col-lg-8 col-md-8 col-12">
        <div class="d-flex align-items-center">
          <div class="position-relative mt-n9">
            <% if @user.profile_image.present? %>
            <%= image_tag @user.profile_image.url, class: "rounded-circle avatar-xxl border-white border-width-4 position-relative" %>
            <% else %>
            <%= image_tag "profile_default_img_128.png", class: "rounded-circle avatar-xxl border-white border-width-4 position-relative" %>
            <% end %>
          </div>
          <div class="ml-3">
            <div class="d-flex align-items-center">
              <h3 class="mb-0 font-weight-bold mr-2"><%= @user.name %></h3>
              <% if @user.id == current_user.id %>
              <span class="badge badge-light-primary text-primary"><%= "ID: #{@user.id}" %></span>
              <% end %>
            </div>
            <% if @user.id == current_user.id %>
            <li class="list-unstyled"><i class="fa fa-envelope nav-icon mr-2"></i><%= @user.email %></li>
            <% end %>
            <% if @user.gender == "man" %>
              <li class="list-unstyled mb-2"><i class="fa fa-user nav-icon mr-2"></i>男性</li>
            <% else %>
              <li class="list-unstyled mb-2"><i class="fa fa-user nav-icon mr-2"></i>女性</li>
            <% end %>

          </div>
        </div>
      </div>
      <div class="col-lg-4 col-md-4 col-12">
        <div class="font-size-md mt-4 mt-lg-0 pb-2 pb-lg-0 d-lg-flex justify-content-end">
          <% if @user.id == current_user.id %>
            <%= link_to "チケット購入履歴", purchase_logs_user_path(current_user), class: "btn btn-outline-success mr-2" %>
            <%= link_to "登録情報を変更", edit_user_registration_path, class: "btn btn-success mr-2" %>
          <% else %>
            <%= link_to "フォローする", "/", class: "btn btn-outline-success mr-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>

<!-- Content -->
<div class="py-6">
  <div class="container">
    <div class="row">
      <div class="col-xl-9 col-lg-9 col-md-12 col-12 mb-5 mt-4 ">
        <ul class="nav nav-lb-tab mb-6" id="tab" role="tablist">
          <li class="nav-item ml-0" role="presentation">
            <a class="nav-link active" style="font-weight: bold;" id="profile-tab" data-toggle="pill" href="#profile" role="tab"
              aria-controls="profile" aria-selected="true">プロフィール</a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link" style="font-weight: bold;" id="plan-tab" data-toggle="pill" href="#plan" role="tab"
              aria-controls="plan" aria-selected="false">プラン <span class="text-muted font-size-xs"><%= "( #{@user.posts.count} )" %></span></a>
          </li>
          <li class="nav-item" role="presentation">
            <a class="nav-link" style="font-weight: bold;" id="review-tab" data-toggle="pill" href="#review" role="tab"
              aria-controls="review" aria-selected="false">レビュー<span class="text-muted font-size-xs"><%= "( #{@reviews.count} )" %></span></a>
          </li>
        </ul>
        <!-- Tab Content -->
        <div class="tab-content" id="tabContent">
          <!-- Tab Pane -->
          <div class="tab-pane fade show active" id="profile" role="tabpanel" aria-labelledby="profile-tab">
            <div class="card">
              <div class="card-body">
                <div class="mb-4">
                  <h3 class="mb-2">経験の詳細</h3>
                  <p><%= @user.about_me %></p>
                </div>
                <h4 class="mb-3">What you’ll learn</h4>
                <div class="row mb-3">
                  <div class="col-12 col-md-6">
                    <!-- List group -->
                    <ul class="list-unstyled">
                      <li class="d-flex align-item-center mb-2">
                        <i class="far fa-check-circle text-success mr-2 lh-lg"></i>
                        <span>
                          Recognize the importance of understanding your objectives when addressing an audience.
                        </span>
                      </li>
                      <li class="d-flex align-item-center mb-2">
                        <i class="far fa-check-circle text-success mr-2 lh-lg"></i>
                        <span>
                          Identify the fundaments of composing a successful close.
                        </span>
                      </li>
                      <li class="d-flex align-item-center mb-2">
                        <i class="far fa-check-circle text-success mr-2 lh-lg"></i>
                        <span>
                          Explore how to connect with your audience through crafting compelling stories.
                        </span>
                      </li>
                    </ul>
                  </div>
                  <div class="col-12 col-md-6">
                    <!-- List group -->
                    <ul class="list-unstyled">
                      <li class="d-flex align-item-center mb-2">
                        <i class="far fa-check-circle text-success mr-2 lh-lg"></i>
                        <span>
                          Examine ways to connect with your audience by personalizing your content.
                        </span>
                      </li>
                      <li class="d-flex align-item-center mb-2">
                        <i class="far fa-check-circle text-success mr-2 lh-lg"></i>
                        <span>
                          Break down the best ways to exude executive presence.
                        </span>
                      </li>
                      <li class="d-flex align-item-center mb-2">
                        <i class="far fa-check-circle text-success mr-2 lh-lg"></i>
                        <span>
                          Explore how to communicate the unknown in an impromptu communication.
                        </span>
                      </li>
                    </ul>
                  </div>
                </div>
                <p>Maecenas viverra condimentum nulla molestie condimentum. Nunc ex libero, feugiat quis lectus vel,
                  ornare euismod ligula. Aenean sit amet arcu nulla.</p>
                <p>
                  Duis facilisis ex a urna blandit ultricies. Nullam sagittis ligula non eros semper, nec mattis odio
                  ullamcorper. Phasellus feugiat sit amet leo eget consectetur.
                </p>
              </div>
            </div>
          </div>
          <div class="tab-pane fade" id="plan" role="tabpanel" aria-labelledby="plan-tab">
            <div class="mb-2" style="font-weight: bold;">
              <h5 class="mb-0">掲載中のプラン</h5>
            </div>
            <% @user_posts.each do |user_posts| %>
            <div class="card mb-3">
              <div class="card-body">
                <!-- List group -->
                <ul class="list-group list-group-flush">
                  <!-- List group item -->
                  <li class="list-group-item px-0 pb-3 pt-0">
                    <div class="d-flex align-items-center justify-content-between">
                      <%= link_to post_path(id: user_posts) do %>
                        <div class="d-lg-flex align-items-center">
                          <div>
                            <img src="/geeks-1.0.1/dist/assets/images/course/course-wordpress.jpg" alt="" class="rounded img-4by3-lg" />
                          </div>
                          <div class="ml-lg-3 mt-2 mt-lg-0">
                            <h4 class="text-inherit">
                              <%= user_posts.title %>
                            </h4>
                            <ul class="list-inline font-size-xs mb-0 text-inherit">
                              <li class="list-inline-item">
                                <i class="mdi mdi-star text-warning mr-1"></i>
                                <%= user_posts.favorites.count %>
                              </li>
                              <li class="list-inline-item">
                                <i class="fa fa-comments mr-1"></i>
                                <span class="text-muted">
                                  <%= user_posts.comments.count %>
                                </span>
                              </li>
                              <li class="list-inline-item">
                                <i class="fa fa-tags mr-1"></i>
                                <%= user_posts.experience %>
                              </li>
                            </ul>
                          </div>
                        </div>
                      <% end %>
                      <div>
                        <!-- Dropdown -->
                        <span class="dropdown dropleft">
                          <i class="far fa-clock mr-1"></i>
                          <%= time_ago_in_words(user_posts.created_at) + "前" %>
                        </span>
                      </div>
                    </div>
                  </li>
                </ul>
              </div>
            </div>
            <% end %>
          </div>
          <div class="tab-pane fade" id="review" role="tabpanel" aria-labelledby="review-tab">
            <div class="mb-2">
              <h5 class="mb-4"><%= "#{@user.name}さんのレビュー" %></h5>
            </div>
            <div class="mb-3">
              <% @reviews.each do |review| %>
              <div class="card mb-3">
                <div class="card-body">
                  <div class="d-flex align-items-center">
                    <% if review.user.profile_image.present? %>
                      <%= image_tag review.user.profile_image.url, class: "rounded-circle avatar-lg" %>
                    <% else %>
                      <%= image_tag 'profile_default_img_128', class:"rounded-circle avatar-lg" %>
                    <% end %>
                    <div class="ml-2 lh-1">
                      <h4 class="mb-1"><%= review.user.name %></h4>
                      <span class="ml-1 font-size-xs text-muted"><%= time_ago_in_words(review.created_at) + "前" %></span>
                    </div>
                  </div>
                  <div class="d-flex mb-5">
                    <span><%= review.content %></span>
                  </div>
                </div>
              </div>
              <% end %>
            </div>
          </div>
        </div>
      </div>
      <%= render partial: 'shared/post_sidebar', locals: { user: @user } %>
    </div>
  </div>
</div>
