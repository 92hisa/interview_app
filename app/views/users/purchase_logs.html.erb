<div class="container">
    <h1 class="text-center">購入履歴</h1>
      <div class="row">
        <div class="col-md-12 col-sm-12 offset-md-12">
            <table class="table text-center">
                <thread>
                <tr>
                <th>Purchase_ID</th>
                <th>投稿者ID</th>
                <th>Post_ID</th>
                <th>購入日</th>
                <th>案件名</th>
                <th>価格</th>
                <th>価格(税込)</th>
                <th>経験</th>
                <th>詳細</th>
                <th></th>
                <th></th>
                </tr>
                </thread>
                  <% if @purchase_logs.present? %><br>
                    <% @purchase_logs.each do |purchase_logs| %>
                      <tbody>
                        <td><%= purchase_logs.id %></td>
                        <td><%= purchase_logs.post.user_id %></td>
                        <td><%= purchase_logs.post.id %></td>
                        <td><%= purchase_logs.created_at.to_s(:datetime_jp) %></td>
                        <td><%= purchase_logs.post.title %></td>
                        <td><%= purchase_logs.post.price.to_s(:delimited) + "円" %></td>
                        <td><%= purchase_logs.post.tax + "円" %></td>
                        <td><%= purchase_logs.post.experience %></td>
                        <td><%= purchase_logs.post.detail %></td>
                        <td><%= link_to "MSG", room_path(id: purchase_logs.id), class: "btn btn-primary" %></td>
                        <td><%= link_to "レビュー投稿", new_post_purchase_review_path(post_id: purchase_logs.post_id, purchase_id: purchase_logs.id), class: "btn btn-primary" %></td>
                      </tbody>
                    <% end %>
                  <% end %>
            </table>
            <div class="text-right">
              <%= link_to "戻る", :back %><br>
              <%= link_to "トップ", root_path %><br>
            </div>
          </div>
      </div>
</div>
