<% if current_user.id == @purchase.saler_id || @purchase.buyer_id %>
  <div class="p-lg-5 py-5">
    <div class="container">
      <div class="row">
        <div class="col-xl-8 col-lg-8 col-md-12 col-12 mb-5 mt-4">
          <div class="border-bottom pb-2 mb-4 d-lg-flex justify-content-between align-items-center">
            <h1 class="mb-0 h2">専用ルーム</h1>
          </div>
          <div class="card mb-5">
            <div class="card-body border">
              <!-- vue -->
              <div id="room">
                <room />
              </div>
              <%= javascript_pack_tag 'room' %>
              <%= stylesheet_pack_tag 'room' %>
              <!-- vue -->
            </div>
          </div>
          <%= render 'purchase_post' %>
        </div>
        <div id='messages' class="col-xl-4 col-lg-4 col-md-12 col-12 mt-md-4">
          <%= render partial: 'messages/form', locals: { room: @room } %>
          <%= render partial: 'messages/message', collection: @messages %>
        </div>
      </div>
    </div>
  </div>
<% end%>
