<div class="card rounded-lg mb-3">
  <ul class="list-group list-group-flush">
    <li class="list-group-item bg-transparent py-4">
      <div class="row align-items-center">
        <div class="col">
          <div class="d-flex align-items-center">
            <div class="d-flex flex-column">
              <% if message.user.profile_image.present? %>
                <%= image_tag message.user.profile_image.url, class: "avatar-md rounded-circle" %>
                <p class="mb-0"><%= message.user.name %></p>
              <% else %>
                <%= image_tag 'profile_default_img_128', class: "avatar-md rounded-circle" %>
                <p class="mb-0"><%= message.user.name %></p>
              <% end %>
            </div>
            <div class="ml-3" style="width: auto;">
              <p class="mb-0"><%= message.message %></p>
              <i class="far fa-clock mr-1"></i><span><%= "(#{time_ago_in_words(message.created_at)}å‰)" %></span>
            </div>
          </div>
        </div>
      </div>
    </li>
  </ul>
</div>
