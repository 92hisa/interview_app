<div class="message">
  <div class="container">
      <div class="row">
          <div class="col-md-12 col-sm-12 offset-md-12">
              <table class="table text-center">
                  <thread>
                  <tr>
                  <th>User_ID</th>
                  <th>名前</th>
                  <th>メッセージ</th>
                  <th>投稿時間</th>
                  </tr>
                  </thread>
                      <tbody>
                        <td><%= message.user.id %></td>
                        <td><%= message.user.name %></td>
                        <td><%= message.message %></td>
                        <td><%= message.created_at.to_s(:datetime_jp) %></td>
                      </tbody>
              </table>
          </div>
      </div>
  </div>
</div>
