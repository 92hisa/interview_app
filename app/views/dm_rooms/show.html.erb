<div class="left-button">
  <%= link_to "ユーザー一覧に戻る", "/users/index",class:"edit-link" %>
</div>
<h4 class="rooms-title">気になる同士</h4>
<% @entries.each do |entry| %>
  <div class="user-name">
  <strong>
    <% if entry.user.profile_image.present? %>
      <%= image_tag entry.user.profile_image.url, class:"user-image" %>
    <% else %>
      <%= image_tag 'profile_default_img_128', class: "user-image" %>
    <% end %>
      <a class="rooms-user-link" href="/users/<%= entry.user.id %>">
        <%= entry.user.name %>さん
      </a>
  </strong>
  </div>
<% end %>
<hr>
<div class="chats">
  <div class="chat">
    <% if @dms.present? %>
      <% @dms.each do |dm| %>
        <div class="chat-box">
          <div class="chat-face">
            <% if dm.user.profile_image.present? %>
              <%= image_tag dm.user.profile_image.url, class:"user-image" %>
            <% else %>
              <%= image_tag 'profile_default_img_128', class: "user-image" %>
            <% end %>
          </div>
          <div class="chat-hukidashi"> <strong><%= dm.text %></strong> <br>
            <%= dm.created_at.strftime("%Y-%m-%d %H:%M")%>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
  <div class="posts">
    <%= form_for @dm do |f| %>
      <%= f.text_field :text, placeholder: "メッセージを入力して下さい" , size: 70, class:"form-text-field" %>
        <%= f.hidden_field :dm_room_id, value: @dm_room.id %>
          <%= f.submit "投稿",class: 'form-submit'%>
    <% end %>
  </div>
</div>
