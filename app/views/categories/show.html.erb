<div class="p-lg-5 py-5">
  <div class="container">
    <div class="row">
      <div class="col-xl-3 col-lg-3 col-md-12 col-12 mt-md-15">
        <%= render partial: 'posts/search', locals: { search_word: @search_word } %>
        <%= render partial: 'posts/category', locals: { category: @categories } %>
      </div>
      <div class="col-xl-9 col-lg-9 col-md-12 col-12 mb-5 mt-4">
        <div class="border-bottom pb-2 mb-4 d-lg-flex justify-content-between align-items-center">
          <div>
            <h1 class="mb-0 h2"><%= "#{@category.name}の経験者を探す" %></h1>
          </div>
        </div>
        <% if @post_categories.present? %>
          <% @post_categories.each do |post_category| %>
            <div class="card mb-5">
              <div class="card-body pt-2 pb-2">
                <div class="d-flex align-items-center justify-content-between">
                  <div class="d-flex align-items-center justify-content-between flex-column">
                    <% if post_category.user.profile_image.present? %>
                      <%= image_tag post_category.user.profile_image.url, class: "avatar-lg rounded-circle border-width-4 border-white" %>
                      <%= post_category.user.name %>
                    <% else %>
                      <%= image_tag "profile_default_img_128.png", class: "avatar-lg rounded-circle border-width-4 border-white" %>
                      <%= post_category.user.name %>
                    <% end %>
                  </div>
                  <div class="ml-3 d-flex flex-column">
                    <h4 class="mb-1" style="font-weight: bold;"><%= post_category.title %></h4>
                    <h5 class="mb-1" style="font-weight: bold;"><%= post_category.subtitle %></h5>

                    <div class="d-sm-flex align-items-center flex-xs-sm-column">
                      <li class="list-inline-item"><%= "[評価] #{post_category.user.average_review}" %></li>
                      <li class="list-inline-item"><%= "[料金] #{post_category.display_price}" %></li>
                      <% if post_category.way == 1 %>
                        <li class="list-inline-item"><%= "[対話方法] ビデオ通話" %></li>
                      <% elsif post_category.way == 2 %>
                        <li class="list-inline-item"><%= "[対話方法] チャット" %></li>
                      <% else %>
                        <li class="list-inline-item"><%= "[対話方法] ビデオ通話・チャットどちらでも可" %></li>
                      <% end %>
                    </div>
                  </div>
                  <div style="margin-left: auto;">
                    <% if post_category.plan_image.present? %>
                      <%= image_tag post_category.plan_image, class: "img-fluid", style:"height: 100px; width: auto; object-fit: cover;"%>
                    <% else %>
                      <%= image_tag "comming_soon.jpeg", class: "img-fluid", style:"height: 100px; width: auto; object-fit: cover;"%>
                    <% end %>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
  </div>
</div>
