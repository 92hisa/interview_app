<div class="container">
    <h1 class="text-center">案件一覧</h1>
    <div class="row">
        <div class="col-md-12 col-sm-12 offset-md-12">
            <table class="table text-center">
                <thread>
                <tr>
                <th>Post_ID</th>
                <th>User_ID</th>
                <th>掲載日</th>
                <th>案件名</th>
                <th>案件掲載終了日</th>
                <th>販売価格</th>
                <th>経験</th>
                <th>備考</th>
                <th></th>
                <th></th>
                </tr>
                </thread>
                <% @post.each do |post| %>
                  <tbody>
                    <td><%= post.id %></td>
                    <td><%= post.user_id %></td>
                    <td><%= post.created_at.to_s(:datetime_jp)  %></td>
                    <td><%= post.title %></td>
                    <td><%= post.due_date %></td>
                    <td><%= post.fee %></td>
                    <td><%= post.experience %></td>
                    <td><%= post.detail %></td>
                    <td><%= link_to "詳細", post_path(post.id), class: "btn btn-primary" %></td>
                  </tbody>
                <% end %>
            </table>
        </div>
    </div>
</div>
