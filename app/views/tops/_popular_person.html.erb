<div class="py-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="row ">
          <div class="col-lg-12 col-md-12 col-12">
            <div class="mb-5 border-bottom pb-2">
              <h2 class="mb-1">人気の経験者</h2>
            </div>
          </div>
        </div>
        <div class="row">
          <% @popular_user.present? %>
          <% @popular_user.each do |popular_user| %>
            <div class="col-lg-3 col-md-6 col-12">
              <div class="card mb-4 ">
                <div class="card-body">
                  <div class="text-center">
                    <%= link_to user_path(popular_user),data: {"turbolinks" => false} do %>
                      <% if popular_user.profile_image.present? %>
                      <%= image_tag popular_user.profile_image.url, class: "rounded-circle avatar-xl mb-3" %>
                      <% else %>
                      <%= image_tag "profile_default_img_128.png", class: "rounded-circle avatar-xl mb-3" %>
                      <% end %>
                      <h4 class="mb-0"><%= popular_user.name %></h4>
                      <% if popular_user.user_post_categories.present? %>
                        <% popular_user.user_post_categories.first(3).each do |category| %>
                          <span class="text-muted font-size-xs"><i class="fas fa-hashtag ml-1"></i><%= category.name %></span>
                        <% end %>
                      <% else %>
                        <span class="text-muted font-size-xs">カテゴリーなし</span>
                      <% end %>
                    <% end %>
                  </div>
                  <div class="d-flex justify-content-between border-bottom py-2 mt-4">
                    <span>レビュー数</span>
                    <span class="text-dark"><%= Review.where(saler_id: popular_user).count %></span>
                  </div>
                  <div class="d-flex justify-content-between border-bottom py-2">
                    <span>評価</span>
                    <span class="text-warning"><%= popular_user.average_review %><i class="mdi mdi-star"></i></span>
                  </div>
                  <div class="d-flex justify-content-between py-2 border-bottom">
                    <span>契約数</span>
                    <span class="text-dark"><%= Purchase.where(saler_id: popular_user).count %></span>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
